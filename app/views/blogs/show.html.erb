<% content_for :menu do %>
  <li>
    <%= link_to 'Edit This Post', edit_blog_path(@blog) %>
  </li>
  <li>
    <%= link_to "Delete This Post", blog_path(@blog),
      :data => {:confirm => "Are you sure?",
          :method => "delete"} %>
  </li>
<% end %>

<div class="col-md-6 col-md-offset-3 faded-box">
  <div class="post">
    <h2>Post for <%= human_date(@blog.created_at) %> @ <%= human_time(@blog.created_at) %></h2>
    <div class="text">
      <%= @blog.text %>
    </div>
  </div>
  <br><br>
  <div class="comments">
    <% if user_signed_in? %>
      <h4><%= link_to "Leave a comment", new_blog_comment_path(@blog) %></h4>
    <% else %>
      <h4><%= link_to "Log In or Sign Up", new_user_session_path %> to comment</h4>
    <% end %>

    <% @blog.comments.each do |comment| %>
      <hr>
      <div class="comment">
        At <span class="posted-on"><%= human_time(comment.created_at) %>
          on <%= human_date(comment.created_at) %> </span>
        <span class="author"><%= comment.user.email %></span> wrote:
        <div class="text">
          <%= comment.text %>
        </div>
        <% if user_signed_in? && current_user.id == comment.user.id %>
        <div class="comment-edit">
          <%= button_to "Delete", blog_comment_path(@blog, comment),
              method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-warning" %>

          <%= button_to "Edit", edit_blog_comment_path(@blog, comment), method: :get, class: "btn btn-primary" %>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
