<% content_for :menu do %>
  <li>
    <%= link_to "Add a Project", new_category_project_path(@category) %>
  </li>
  <li role="separator" class="divider"></li>
  <li>
    <%= link_to "Edit This Category", edit_category_path(@category) %>
  </li>
  <li>
    <%= link_to "Delete This Category", category_path(@category),
      :data => {:confirm => "Are you sure?",
          :method => "delete"} %>
  </li>
<% end %>

<div class="category full-width">
  <h1><%= @category.name %> Projects</h1>
  <ul>
    <% @category.projects.each do |project| %>
      <li><%= link_to project.name, category_project_path(@category, project) %></li>
    <% end %>
  </ul>
</div>
