<%= form_for [@category], :html => {:class => "form"} do |f| %>
  <div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
  <%= f.label :description %>
  <%= f.text_field :description, class: "form-control" %>
  </div>
  <p><%= f.submit class: 'btn btn-warning' %></p>
<% end %>
