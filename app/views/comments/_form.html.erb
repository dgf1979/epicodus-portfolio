<%= form_for [@blog, @comment], :html => {:class => "form"}, remote: true do |f| %>
  <%= render 'layouts/errors', :object => @comment %>

  <div class="form-group">
    <%= f.label :text, style: "display: none;"  %><br>
    <%= f.text_area :text, rows: 6, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary btn-lg btn-block" %>
  </div>

<% end %>
